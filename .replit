entrypoint = "index.js"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[workflows]
runButton = "Run Tests"

[[workflows.workflow]]
name = "Run Tests"
author = 3706638
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm test"

[[ports]]
localPort = 33225
externalPort = 3001

[[ports]]
localPort = 39555
externalPort = 3000

[[ports]]
localPort = 46329
externalPort = 80

[agent]
expertMode = true
